generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER_REGISTERED
  USER_EMAIL_VERIFIED
  USER_FULL_VERIFIED
  ADMIN
}

model User {
  id        String   @id @db.Uuid
  email     String?  @unique
  phone     String?
  name      String?
  role      UserRole @default(USER_REGISTERED)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}