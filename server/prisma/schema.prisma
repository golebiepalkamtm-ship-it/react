// server/prisma/schema.prisma
// This schema file relies on the root `prisma/schema.prisma` for generator and datasource
// to avoid duplicate datasource/generator definitions in the workspace.

model Auction {
  id             String   @id @default(cuid())
  title          String
  description    String?
  starting_price Float
  current_price  Float
  end_time       DateTime
  status         String   @default("active")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}